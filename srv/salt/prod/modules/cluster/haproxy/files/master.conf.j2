! Configuration File for keepalived

global_defs {
   router_id haproxy_minion
}

vrrp_script haproxy_check {
    script "/scripts/check_haproxy.sh"
    interval 1
    weight -20
}

vrrp_instance VI_1 {
    state BACKUP
    interface ens33
    virtual_router_id 81
    priority 100
    nopreempt
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ pillar['haproxy_pass'] }} 
    }
    virtual_ipaddress {
        {{ pillar['haproxy_vip'] }}
    }
    track_script {
        haproxy_check
    }
}

virtual_server {{ pillar['haproxy_vip'] }} {{ pillar['haproxy_port'] }} {
    delay_loop 6
    lb_algo rr
    lb_kind NAT
    persistence_timeout 50
    protocol TCP
    
{% for haproxy_ip in pillar['haproxy_info'] %}    real_server {{ haproxy_ip }} {{ pillar['haproxy_port'] }} {
        weight 1
        TCP_CHECK {
            connect_port {{ pillar['haproxy_port'] }}
            connect_timeout 3
            nb_get_retry 3
            delay_before_retry 3
        }
    }
{% endfor %}
}
